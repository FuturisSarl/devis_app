<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardCornerRadius="4dp" android:id="@+id/card_composant"
            app:cardUseCompatPadding="true" app:cardElevation="4dp" app:cardMaxElevation="5dp"
            app:contentPadding="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/composant_electricite"
                    android:id="@+id/composantImg" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/app_name"/>
            <TextView
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/composantText"
                    app:layout_constraintTop_toBottomOf="@+id/composantImg"
                    app:layout_constraintEnd_toEndOf="@+id/composantImg"
                    app:layout_constraintStart_toStartOf="@+id/composantImg" android:layout_marginTop="8dp"
                    android:contentDescription="@string/app_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>