<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFB700</item>
        <item name="colorPrimaryVariant">#FFEB3B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ABDA03</item>
        <item name="colorSecondaryVariant">#6A8701</item>
        <item name="colorOnSecondary">#CDDC39</item>
        <!-- Status bar color. -->
    </style>
    <style name="AppTheme.General" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFB700</item>
        <item name="colorPrimaryVariant">#FFEB3B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ABDA03</item>
        <item name="colorSecondaryVariant">#6A8701</item>
        <item name="colorOnSecondary">#CDDC39</item>
        <!-- Status bar color. -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.ImgComposantPrincipal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="AppTheme.GridLayoutManager">
        <item name="android:gravity">center</item>
    </style>
    <style name="grid_input_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>